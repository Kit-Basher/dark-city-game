# Server Configuration
PORT=3000
NODE_ENV=development

# HTTPS Configuration
FORCE_HTTPS=false
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/darkcity

# Redis Configuration
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# Discord Webhook URL (optional)
DISCORD_WEBHOOK_URL=your_discord_webhook_url_here

# Security (optional)
API_KEY=your_secure_api_key_here
JWT_SECRET=your_jwt_secret_here_change_in_production
BCRYPT_ROUNDS=12

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,https://yourusername.github.io
FRONTEND_URL=https://yourusername.github.io/dark-city-game

# GitHub Integration
REPO_OWNER=your_github_username
REPO_NAME=dark-city-game
ENABLE_GITHUB_INTEGRATION=false
ENABLE_DISCORD_NOTIFICATIONS=false

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=logs
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d

# Frontend Configuration
CALENDAR_MONTHS_TO_LOAD=3
MAX_CHARACTERS_PER_PAGE=12
