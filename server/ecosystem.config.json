{
  "apps": [
    {
      "name": "dark-city-server",
      "script": "server.js",
      "instances": "max",
      "exec_mode": "cluster",
      "env": {
        "NODE_ENV": "production",
        "PORT": 3000,
        "MONGODB_URI": "mongodb://localhost:27017/darkcity",
        "JWT_SECRET": "your-secret-key-change-in-production",
        "BCRYPT_ROUNDS": 12,
        "DISCORD_WEBHOOK_URL": ""
      },
      "env_development": {
        "NODE_ENV": "development",
        "PORT": 3000,
        "MONGODB_URI": "mongodb://localhost:27017/darkcity",
        "JWT_SECRET": "your-secret-key-change-in-production",
        "BCRYPT_ROUNDS": 12,
        "DISCORD_WEBHOOK_URL": ""
      },
      "log_file": "logs/combined.log",
      "out_file": "logs/out.log",
      "error_file": "logs/error.log",
      "log_date_format": "YYYY-MM-DD HH:mm:ss Z",
      "merge_logs": true,
      "max_memory_restart": "500M",
      "min_uptime": "10s",
      "max_restarts": 10,
      "restart_delay": 5000,
      "autorestart": true,
      "watch": false,
      "ignore_watch": ["node_modules", "logs", "coverage", "tests"],
      "kill_timeout": 10000,
      "wait_ready": true,
      "listen_timeout": 10000,
      "health_check_grace_period": 3000,
      "time": true,
      "args": [],
      "node_args": "--max-old-space-size=1024",
      "cron_restart": "0 2 * * *",
      "pmx": true,
      "v8": true,
      "env_production": {
        "NODE_ENV": "production",
        "PORT": 3000
      }
    }
  ]
}
